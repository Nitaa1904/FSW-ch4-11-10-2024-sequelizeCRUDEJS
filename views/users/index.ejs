<div class="container mt-5">
  <div class="text-center mb-5">
    <h2 class="fw-bold text-pink">🌸 Cute User Grid 🌸</h2>
    <p class="text-muted">
      Our lovely users displayed in a beautiful grid layout. 😊
    </p>
  </div>

  <div class="row gy-4">
    <% users.map((user) => { %>
    <div class="col-12 col-md-6 col-lg-4">
        <a
        href="/users/<%= user.id %>"
        class="text-decoration-none"
        style="color: inherit"
      >
      <div
        class="card h-100 border-0 shadow-sm"
        style="border-radius: 15px; background-color: #fff6f9"
      >
        <div class="card-body text-center">
          <img
            src="<%= user.photoProfile %>"
            alt="Profile photo"
            class="img-thumbnail rounded-circle mb-3"
            style="width: 100px; height: 100px; border: 4px solid #ff4b82"
          />
          <h5
            class="card-title text-pink fw-bold"
            style="font-family: 'Comic Sans MS', cursive"
          >
            <%= user.firstName %>
          </h5>
          <p class="mb-2" style="color: #ff4b82">🎂 Age: <%= user.age %></p>
          <p class="mb-0">
            <a
              href="tel:<%= user.phoneNumber %>"
              class="text-decoration-none text-muted"
            >
              📞 <%= user.phoneNumber %>
            </a>
          </p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
